<UserControl x:Class="Tum4ik.JustClipboardManager.Views.Shared.MajorUpdateAvailableDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:Tum4ik.JustClipboardManager.ViewModels.Shared"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:MajorUpdateAvailableDialogViewModel}">
  <StackPanel>
    <TextBlock Text="{Binding Translate[MajorUpdateAvailableDescription]}"
               TextWrapping="Wrap"/>
    <TextBlock>
      <Hyperlink Command="{Binding OpenLinkCommand}"
                 CommandParameter="https://github.com/Tum4ik/just-clipboard-manager/releases/latest">
          <TextBlock Text="https://github.com/Tum4ik/just-clipboard-manager/releases/latest"/>
        </Hyperlink>
      </TextBlock>
  </StackPanel>
</UserControl>
