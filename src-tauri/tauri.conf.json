{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "just-clipboard-manager",
  "identifier": "com.just-clipboard-manager.app",
  "build": {
    "beforeDevCommand": "npm run start",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist/just-clipboard-manager/browser"
  },
  "app": {
    "windows": [
      {
        "label": "paste-window",
        "url": "paste-window",
        "width": 400,
        "height": 400,
        "resizable": false,
        "decorations": false,
        "skipTaskbar": true,
        "alwaysOnTop": true,
        "visible": false
      },
      {
        "label": "main-window",
        "url": "main-window",
        "title": "Just Clipboard Manager",
        "width": 1000,
        "height": 700,
        "minWidth": 750,
        "minHeight": 250,
        "decorations": false,
        "create": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "sql": {
      "preload": [
        "sqlite:jcm-database.db"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "nsis",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "resources/plugins/": "plugins/",
      "config/*.toml": "config/"
    }
  }
}
